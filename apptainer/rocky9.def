bootstrap: docker
from: rockylinux:9

%labels
	Version 1.0
	Maintainer Tim Kaiser

%help
    This is a Rocky Linux 9 container for running apptainer and compiling









%runscript
    echo "Running the main script from inside the Rocky Linux 9 container."
    echo APPTAINER
    /usr/bin/which apptainer
    apptainer --help
    /usr/bin/which gcc
    gcc -v
    /usr/bin/which python3
    python3 -V
 











%post
    echo "Installing packages into the Rocky Linux 8 container"
    ls /usr/bin
    dnf -y update
    #dnf -y install gcc
    dnf -y group install "Development Tools"
    dnf -y install git
    #dnf -y install python
    #dnf -y install python-devel
    dnf -y install wget
    dnf -y install epel-release 
    dnf -y install apptainer-suid
    dnf -y install sudo
    dnf -y install findutils

    mkdir /extra01
    mkdir /extra02
    mkdir /extra03
    mkdir /extra04









